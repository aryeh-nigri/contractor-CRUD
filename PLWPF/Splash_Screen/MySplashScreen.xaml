<Window x:Class="PLWPF.Splash_Screen.MySplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.Splash_Screen"
        mc:Ignorable="d"
        Title="SplashScreen" Height="150" Width="300" ResizeMode="NoResize" WindowStyle="None"
        WindowStartupLocation="CenterScreen" Background="Blue" BorderThickness="5" BorderBrush="AliceBlue" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Label Content="Welcome to Koach Adam 1.0" Grid.Row="0" HorizontalAlignment="Center" Foreground="Red" />
        <Image Source="/imgs/employers.jpg" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ProgressBar x:Name="progressBarSplash" Height="10" VerticalAlignment="Bottom" IsIndeterminate="True"  Grid.Row="2"/>
    </Grid>
</Window>
